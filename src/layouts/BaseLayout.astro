---
import '@/styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Background from '@components/Background.astro';
import { getSettings } from '@lib/microcms';

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description = '', currentPage = '' } = Astro.props;

// サイト設定を取得
const settings = await getSettings();
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description || settings.siteDescription || ''} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
</head>
<body class="min-h-screen bg-gradient-main text-gray-700 font-sans relative overflow-x-hidden">
  <Background />
<Header currentPage={currentPage} siteName={settings.siteName} />
  
  <main class="relative z-10">
    <slot />
  </main>
  
  <Footer twitterUrl={settings.twitterUrl} instagramUrl={settings.instagramUrl} />
</body>
</html>
