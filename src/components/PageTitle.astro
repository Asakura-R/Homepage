---
interface Props {
  en: string;
  jp: string;
}

const { en, jp } = Astro.props;
---

<div class="text-center mb-10 md:mb-12">
  <h1 class="text-2xl md:text-3xl font-semibold tracking-widest gradient-text mb-2">
    {en}
  </h1>
  <p class="text-xs text-gray-400 tracking-widest">
    {jp}
  </p>
</div>
